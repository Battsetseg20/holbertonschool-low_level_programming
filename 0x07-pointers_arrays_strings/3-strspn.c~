#include "holberton.h"

/**
 * _strspn - gets the length of a prefix substring
 *
 *@s : string to check
 *@accept: string of characters to accept
 *
 *Return: n of bytes in initial string that consists of bytes from accept
 */

char *_strchr(char *s, char c)  /* locates the characters in a string */
{
	int i;

	for (i = 0; s[i]; i++)
	{
		if (s[i] == c)
			return (s + i);
	}

	if (s[i] == c) /* what happens if c = '\0' */
		return (s + i);

	return (0);
}


unsigned int _strspn(char *s, char *accept)
{
	int n;
	while(s[n] && _strchr(accept,s[n]))
		n++;
	return n;
}
