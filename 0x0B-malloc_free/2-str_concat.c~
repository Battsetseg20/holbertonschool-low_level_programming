#include "holberton.h"
#include <stdlib.h>

/**
 *str_concat - concatenates two strings
 *s1: preceding string
 *s2: following string
 *
 *Return: pointer to newly allocated space in memory, NULL if it fails
 */

char *str_concat(char *s1, char *s2)
{
	int i, j, l1, l2, size;
	char *a;

	l1 = 0;
	while (*s1)
		l1++;
	l2 = 0;
	while (*s2)
		l2++;
	size = l1 + l2 + 1;
	a = malloc(size * sizeof(char));
	for (i = 0; i < l1; i++)
	{
		a[i] = s1[i];
	}
	for (j = 0; j < size; j++)
	{
		a[i + j] = s2[j];
	}
	return (0);
}
