#include "holberton.h"

/**
 *
 */

int prime(int n, int i)
{
	/* first prime n = 2; or if divisible by different n than itself*/
	if (n < 2 || n % i == 0 && n != i)
		return (0);

	/* if divisble by itself, then prime number */
	if (i == n && n % i == 0)
		return (1);

	return (prime(n, ++i));

}

int is_prime_number(int n)
{
	return (prime(n, 2));
}
